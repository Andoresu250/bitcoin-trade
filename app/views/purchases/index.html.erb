<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Btc</th>
      <th>Value</th>
      <th>Country</th>
      <th>State</th>
      <th>Bank account</th>
      <th>Transfer evidence</th>
      <th>Deposit evidence</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.person %></td>
        <td><%= purchase.btc %></td>
        <td><%= purchase.value %></td>
        <td><%= purchase.country %></td>
        <td><%= purchase.state %></td>
        <td><%= purchase.bank_account %></td>
        <td><%= purchase.transfer_evidence %></td>
        <td><%= purchase.deposit_evidence %></td>
        <td><%= link_to 'Show', purchase %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

