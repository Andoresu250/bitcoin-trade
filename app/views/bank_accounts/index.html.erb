<p id="notice"><%= notice %></p>

<h1>Bank Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Bank</th>
      <th>Number</th>
      <th>Identification</th>
      <th>Document type</th>
      <th>Identification front</th>
      <th>Identification back</th>
      <th>Account certificate</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.bank %></td>
        <td><%= bank_account.number %></td>
        <td><%= bank_account.identification %></td>
        <td><%= bank_account.document_type %></td>
        <td><%= bank_account.identification_front %></td>
        <td><%= bank_account.identification_back %></td>
        <td><%= bank_account.account_certificate %></td>
        <td><%= bank_account.person %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank Account', new_bank_account_path %>
